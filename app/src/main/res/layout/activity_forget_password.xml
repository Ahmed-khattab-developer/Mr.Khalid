<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ForgetPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/background"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_SignIn_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/cairo_regular"
                android:text="@string/forget_password"
                android:textColor="@color/signupsignintextcolor"
                android:textSize="@dimen/textsize_30"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_SignIn_TextView"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_Email_textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="@dimen/marign_23"
                    android:layout_marginTop="@dimen/marign_33"
                    android:layout_marginRight="@dimen/marign_23"
                    android:background="@null">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/id_Email_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="left|center"
                        android:fontFamily="@font/cairo_regular"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/primarytext"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/textsize_14" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:id="@+id/id_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/marign_23"
                    android:layout_marginTop="@dimen/marign_2"
                    android:layout_marginRight="@dimen/marign_23"
                    android:background="@color/linecolor" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/id_done_Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50"
                    android:layout_marginLeft="@dimen/marign_32"
                    android:layout_marginTop="@dimen/marign_46"
                    android:layout_marginRight="@dimen/marign_32"
                    android:layout_marginBottom="@dimen/marign_46"
                    android:background="@drawable/rectsignin"
                    android:fontFamily="@font/cairo_regular"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/thirdtext"
                    android:textSize="@dimen/textsize_20"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:padding="50dp"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading-animation.json"
        app:lottie_imageAssetsFolder="images/"
        app:lottie_loop="true" />

</RelativeLayout>